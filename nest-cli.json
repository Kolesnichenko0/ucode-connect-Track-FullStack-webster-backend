{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "prisma/seeds/templates/**/*.json",
                "outDir": "dist",
                "watchAssets": true
            },
            {
                "include": "calendar/data/**/*.json",
                "outDir": "dist"
            }
        ],
        "watchAssets": true
    }
}
